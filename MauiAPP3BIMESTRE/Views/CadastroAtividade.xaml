<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAPP3BIMESTRE.Views.CadastroAtividade"
             Title="CadastroAtividade">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Nova" Order="Primary"
                     Command="{Binding NovaAtividade}"/>
        <ToolbarItem Text="Salvar" IconImageSource="{OnPlatform Android=salvar24}" 
                     Order="Primary"
             Command="{Binding SalvarAtividade}"/>
    </ContentPage.ToolbarItems>


    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="{Binding Id}" />

            <Label Text="Descrição:" />
            <Entry Text="{Binding Descricao}"
                    Placeholder="Como foi sua atividade"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>